generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id        Int       @id @default(autoincrement())
  firstName String    @db.VarChar
  userName  String    @unique @db.VarChar
  avatar    String    @db.VarChar
  isActive  Boolean   @default(true)
  friends   friends[] @relation("friendsTouser")
  received  message[] @relation("messageFrom")
  sent      message[] @relation("messageTo")
}

model message {
  id        Int     @id @default(autoincrement())
  sender    String
  recipient String
  content   String?
  to        user[]  @relation("messageFrom")
  from      user[]  @relation("messageTo")
}

model friends {
  id       Int    @id @default(autoincrement())
  userName String @unique @db.VarChar
  friends  user[] @relation("friendsTouser")
}
