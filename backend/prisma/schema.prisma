generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id       Int      @id @default(autoincrement())
  date     DateTime @default(now())
  content  String?
  senderId Int
  chatId   Int?
  Chat     Chat?    @relation(fields: [chatId], references: [id])
  Sender   User     @relation("senderMsg", fields: [senderId], references: [id])
}

model User {
  id           Int       @id @default(autoincrement())
  firstName    String    @db.VarChar
  userName     String    @unique @db.VarChar
  avatar       String    @db.VarChar
  isActive     Boolean   @default(true)
  MessagesSent Message[] @relation("senderMsg")
  Chats        Chat[]    @relation("chatUser")
}

model Chat {
  id       Int       @id @default(autoincrement())
  type     String    @default("personal")
  chatName String    @db.VarChar
  history  Message[]
  members  User[]    @relation("chatUser")
}
