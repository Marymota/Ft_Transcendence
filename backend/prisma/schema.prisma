generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model friends {
  id       Int    @id @default(autoincrement())
  userName String @unique @db.VarChar
  user     user[]
}

model message {
  id               Int     @id @default(autoincrement())
  sender           String
  recipient        String
  content          String?
  user_messageFrom user[]  @relation("messageFrom")
  user_messageTo   user[]  @relation("messageTo")
}

model user {
  id                  Int       @id @default(autoincrement())
  firstName           String    @db.VarChar
  userName            String    @unique @db.VarChar
  avatar              String    @db.VarChar
  isActive            Boolean   @default(true)
  friends             friends[]
  message_messageFrom message[] @relation("messageFrom")
  message_messageTo   message[] @relation("messageTo")
}
